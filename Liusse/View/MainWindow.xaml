    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="320*"/>
        </Grid.RowDefinitions>

        <!--#region Поле выходных значений-->
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="1" HorizontalAlignment="Right"
                     VerticalAlignment="Top">
                <TextBox Style="{StaticResource OutputTextBox}"
                         SelectionBrush="{DynamicResource СomplementaryColor}" 
                         Foreground="{DynamicResource Text1Color}" 
                         Margin="0,-2,0,-2" TextWrapping="Wrap"
                         MaxWidth="200" Text="244 200"/>
            </Viewbox>

            <Viewbox Grid.Row="0" HorizontalAlignment="Right"
                     VerticalAlignment="Center">
                <TextBox Style="{StaticResource OutputTextBox}" 
                         SelectionBrush="{DynamicResource СomplementaryColor}" 
                         Foreground="{DynamicResource Text1Color}" 
                         Margin="0,-2,0,0" TextWrapping="Wrap" Opacity="0.8"
                         MaxWidth="200" Text="5 + 5 * 88 / 2 * 555="/>
            </Viewbox>
        </Grid>
        <!--#endregion-->
        <Templ:StandartOutput Grid.Row="1" Margin="5"/>

        <Templ:StandartInput Grid.Row="2" Margin="2"/>

    </Grid>
